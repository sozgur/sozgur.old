.ribbon{background-color:black;overflow:hidden;position:absolute;left:-2em;top:3.5em;-moz-transform:rotate(-45deg);-webkit-transform:rotate(-45deg);-moz-box-shadow:0 0 1em #e0b0b0;-webkit-box-shadow:0 0 1em #e0b0b0;}.ribbon a{border:1.5px solid #faa;color:#fff;display:block;font:bold 90% FreeSans,Helvetica,Arial,sans-serif;margin:.3em 0 .01em 0;padding:.5em 3.5em;text-align:center;text-decoration:none;text-shadow:0 0 .9em #444;}
